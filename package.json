  },
  "license": "MIT",
  "description": "A template for building a Vue.js application with Python and Vue Vite.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isinvon/py-vue-gui-framework-template.git"
  },
  "scripts": {
    "===Install dependencies": "=========================================================",
    "⚙️ py-install": "python -m pip install -r requirements.txt",
    "⚙️ vue-install": "pnpm install",
    "⚙️ py-vue-install": "pnpm install && python -m pip install -r requirements.txt",
    "===Run App": "=============================================================",
    "🚀 py-dev": "python main.py",
    "🚀 vue-dev": "vite",
    "🚀 py-vue-dev-concurrently": "concurrently \"python main.py\" \"vite\"",
    "🚀 py-vue-dev-sequentially": "python main.py && vite",
    "===Preview App Frontend": "=========================================================",
    "🖼️ vue-preview": "vite preview",
    "===Build for App": "=========================================================",
    "📦 build-vue": "vite build --emptyOutDir",
    "📦 build-exe": "venv\\Scripts\\activate && python pyapp/package_script/build_exe.py",
    "📦 build-app": "venv\\Scripts\\activate && python pyapp/package_script/build_app.py",
    "📦 build-dmg": "venv\\Scripts\\activate && python pyapp/package_script/build_dmg.py",
    "===Others": "=========================================================",
    "🚀 check-py-env": "venv\\Scripts\\activate && python --version"
  },
  "dependencies": {
    "vue": "^3.5.13",
    "vue-router": "^4.0.3",
    "element-plus": "^2.8.8",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "vite": "^6.0.1",
    "concurrently": "^9.1.0",
    "less": "^4.0.0"
  }
}
